%section.genre
  %header.clearfix
    %h1= @category.name
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    - @category.videos.each do |vid|
      .video.col-md-2
        = link_to video_path(vid) do
          - vid.title
          - image_tag(vid.small_cover_url)